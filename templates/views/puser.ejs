<%- include('../partials/header') -%>
    <div class="container-fluid" style="background:url(/b_g1.jpg) repeat-y; height: 100vh;">
        <div style="padding-top: 3vh;">
            <h1 style=" color: aliceblue; ">You can do</h1>
        </div>
        <div style="display: inline; margin-left:3%; margin-top:2%;">
            <form action="/add-new/<%=id%>" method="POST" style="display: inline;">
                <input type="submit" value="Add New Work" class="btn btn-primary my-1 d-inline ">
            </form>
        </div>

        <% arr.forEach( (item,index) => { %>
            <div class="work card my-4 " style="border-left: white 2px solid; border-bottom: white 2px solid; width : 300px; background-color: transparent;">
                <div class="work-details card-body ">
                    <div class="card-title " style="color: aliceblue; font-size: 25px; font-weight: bolder; ">
                        <p>Work name:
                            <%= item.typwork %>
                        </p>

                        <p>Price:
                            <%= item.price%>/
                                <%= item.duration%>
                        </p>
                    </div>
                    <div class="d-flex justify-content-between ">
                        <form action="/update/<%=id%>" method="POST" class=" my-1">
                            <input type="hidden" name="workid" value="<%= item._id%>">
                            <input type="hidden" name="typwork" value="<%=item.typwork%>">
                            <input type="hidden" value="<%= item.price%>" name="pri">
                            <input type="hidden" value="<%= item.duration%>" name="dur">
                            <input type="submit" value="Update" class="btn btn-primary">
                        </form>
                        <form action="/delete-work/<%=id%>" method="POST" class=" my-1">
                            <input type="hidden" name="workid" value="<%= item._id%>">
                            <input type="hidden" name="typwork" value="<%=item.typwork%>">
                            <input type="hidden" value="<%= item.price%>" name="pri">
                            <input type="hidden" value="<%= item.duration%>" name="dur">
                            <input type="submit" value="Delete" class="btn btn-primary">
                        </form>
                    </div>
                </div>
            </div>
            <% }) %>

    </div>

    <%- include('../partials/footer') -%> -%>