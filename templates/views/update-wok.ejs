<%- include('../partials/header') -%>
    <div style="background-image:url(/b_g1.jpg); min-height: 100vh;">
        <div class="row">
            <form action="/update-work/<%=id%>" method="post" style="width: 50vw; margin-top: 16vh; margin-left: 10vw;">
                <div class="form-group container">
                    <div class="d-flex flex-column">
                        <label for="typeofwork" style="color : white; font-size : 20px; font-weight : bolder; display:block">Work</label>
                        <input style="height: 60px; width: 500px;" type="text" name="typwork" class="form-control" id="typework" aria-describedby="work" placeholder="Type of Work">
                    </div>

                    <div class="d-flex" style="margin-top: 5%; margin-left: -13%;">
                        <div class="d-flex flex-column" style="padding-left: 6vw;">
                            <label for="rate" style="color : white; font-size : 20px; font-weight : bolder;">Price of work</label>
                            <input style="height: 60px; width: 320px;" type="text" name="price" class="form-control" id="rate" aria-describedby="work" placeholder="rate">
                        </div>
                        <div style="padding-top: 5vh; margin-left:5vw;">
                            <select name="duration" style="margin-left: 12%; height: 7vh;">
                                <option value="monthly">monthly</option>
                                <option value="daily">daily</option>
                            </select>
                        </div>
                    </div>
                    <div>
                        <input type="hidden" value="<%=workid%>" name="wid">
                        <input type="submit" value="UPDATE WORK" class="btn btn-info" style="margin-top: 5%; margin-left: 25%;">
                    </div>
                </div>

            </form>
        </div>
    </div>

    <%- include('../partials/footer') -%>